{% set currentPath = path(app.request.attributes.get('_route')) %}
{% set distributorPath = '/distributor/import/' %}
{% set pharmacyPath = '/pharmacy' %}

<div class="container mt-5 shadow mb-5 bg-white rounded p-0">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link {% if currentPath == distributorPath %} active {% endif %}" href="{{ path('distributor_import') }}">
                        Импорт продукции
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if currentPath == pharmacyPath %} active {% endif %}" href="{{ path('pharmacy') }}">
                        Аптеки
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</div>
