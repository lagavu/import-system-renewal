{% extends 'base.html.twig' %}

{% block title %}Импорт продукции{% endblock %}

{% block body %}

    {% include 'includes/navbar.html.twig' %}

    <div class="container mt-5 shadow p-3 mb-5 bg-white rounded p-5">
        <h5>Импорт продукции</h5>

        {{ form_start(form) }}
            {{ form_row(form.distributorName) }}
            {{ form_row(form.file) }}
            <button type="submit" class="btn btn-primary mt-3">Загрузить</button>
        {{ form_end(form) }}

    </div>

    {% if unknownBindings %}
        <div class="container mt-5 shadow p-3 mb-5 bg-white rounded p-5">
            <h5>Ненайденные привязки</h5>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Наименование</th>
                    <th scope="col">Редактировать</th>
                    <th scope="col">Удалить</th>
                </tr>
                </thead>
                <tbody>
                    {% for key, unknownBinding in unknownBindings %}
                        <tr>
                            <td>{{ key }}</td>
                            <td>{{ unknownBinding.name }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}
